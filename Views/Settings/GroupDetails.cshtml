@model Ticketer.Database.Group

<div>
    <h4>Group</h4>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Company)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Company.Name)
                </dd>
            </dl>
        </div>
        <div class="col-sm-6">
            <h4>Users:</h4>
            <ul>
                @foreach (var item in Model.Users)
                {
                    <li>@item.UserName</li>
                }
            </ul>
        </div>
    </div>
</div>
<div>
    <a asp-action="GroupDeleteConfirm" asp-route-id="@Model.Id" data-target="#modal-container" data-toggle="modal">Delete</a> |
    <a asp-action="GroupEdit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="GroupList">Back to List</a>
</div>
