@model Ticketer.Models.LogInViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
</head>
<body>

    <form asp-action="Login">
        <div class="login">
            <div class="system-name">
                <h1 style="display: inline-block"><strong>T</strong></h1><h3 style="display: inline-block">icketer</h3>
            </div>
            <div class="password-fields">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="field">
                    <input asp-for="UserName" type="text" name="username" value="" class="text" placeholder="Email" autocomplete="off">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="field">
                    <input asp-for="Password" type="password" name="password" class="text" autocomplete="off" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="login-button">
                    <button tabindex="5" type="submit" class="btn">Login</button>
                </div>
            </div>
        </div>
    </form>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
</html>